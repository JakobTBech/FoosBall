@using FoosBall.Models
@using FoosBall.Main
@model FoosBall.ViewModels.PlayersViewModel
@{
    ViewBag.Title = "FoosBall Players";
}
@section Javascript{ <script async src="/Scripts/Players.js"></script> }
@section Css{ <link rel="stylesheet" href="/Content/Players.css"/>}

@if (Model.AllPlayers.Any()) 
{
    var index = 1;
    foreach (var player in Model.AllPlayers)
    {
        <div id="@player.Id" class="player clearfix">
            <div class="ranking" title="Players ranking">
            @index.
            </div>
            <div class="avatar">
                <a href="@Url.Action("Player","Stats", new {playerId = @player.Id })"><img class="gravatar" alt="Gravatar picture" src="@Html.GetGravatarEmailHash(player.Email)?d=mm"/></a>
            </div>
            <div class="name ellipsis-1">
            <a href="@Url.Action("Player","Stats", new {playerId = @player.Id })">@player.Name</a>
            <br>
                <span title="@player.Rating.ToString("F2")">@player.Rating.ToString("F0")<sup>points</sup></span>
                <div class="won-lost-played" title="Won: @player.Won &middot; Lost: @player.Lost &middot; Played: @player.Played">
                    <span class="won">@player.Won</span> &middot; <span class="lost">@player.Lost</span> &middot; <span class="played">@player.Played</span>
                </div>
            </div>
        </div>

        index++;
    }
} else
{
    <text>- nope! noone here ... - </text>
}