<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>
    <!-- Style Sheets -->
    <link href="@Url.Content("~/Content/Base.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Css", false)
    <!-- Javascript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
    <script type="text/javascript">
        if (typeof jQuery == 'undefined') {
            document.write(unescape('%3Cscript src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"%3E%3C/script%3E'));
        }
    </script>
</head>
<body>
    <div id="page" class="@ViewContext.RouteData.Values["controller"]">
        <header>
            <div id="login-display">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="app-title">
                <span>FoosBall Fighting</span>
            </div>
            <nav>
            </nav>
        </header>
        <section id="main">            
            @RenderBody()
        </section>
        <footer>
            @RenderSection("Footer", false)
            @Html.ActionLink("version "+@FoosBall.Models.HomeModel.GetVersion(), "Version", "Home",new {@id = "version-link" })
        </footer>
    </div>
    <!-- Deferred Javascript -->
    <script src="@Url.Content("~/Scripts/FoosBall.js")"></script>
    @RenderSection("Javascript", false)
</body>
</html>
