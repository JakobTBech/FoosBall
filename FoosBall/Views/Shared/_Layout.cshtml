@using FoosBall.Models.Views
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>
    <!-- Style Sheets -->
    <link href="@Url.Content("~/Content/Base.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Css", false)
    <!-- Javascript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
    <script type="text/javascript">
        if (typeof jQuery == 'undefined') {
            document.write(unescape('%3Cscript src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"%3E%3C/script%3E'));
        }
    </script>
    <!-- Feedback plugin -->
    <script type="text/javascript">
        if (!!window.innerWidth === true && window.innerWidth > 930) {
            var uvOptions = {};
            (function () {
                var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
                uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/RphctqQQTB1Xn7A577qeA.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
            })();
        }
    </script>
</head>
<body>
    <div id="page" class="@ViewContext.RouteData.Values["controller"]">
        <header>
            <div id="login-display">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="app-title">
                <span>FoosBall Fighting</span>
            </div>
            <nav>
                <ul id="main-menu">
                    @if (Session["IsLoggedIn"].ToString().ToLower() == "true")
                    {
                        if (Session["Admin"].ToString().ToLower() == "true")
                        {
                            <li class="Admin">@Html.ActionLink("Admin", "Index", "Admin")</li>                        
                        }                           
                    }
                    <li class="Home">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="Players">@Html.ActionLink("Scoreboard", "Index", "Players")</li>
                    <li class="Match">@Html.ActionLink("Matches", "Index", "Match")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            @RenderSection("Footer", false)
            @Html.ActionLink("version " + @HomeViewModel.GetVersion(), "Version", "Home", new { @id = "version-link" })
        </footer>
    </div>
    <!-- Deferred Javascript -->
    <script src="@Url.Content("~/Scripts/FoosBall.js")"></script>
    @RenderSection("Javascript", false)
</body>
</html>
