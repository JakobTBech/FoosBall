@model EventViewModel 
@{
    var winners = Model.Event.Match.GetWinners();
    var winner1 = Model.Event.Match.GetWinners().First();
    var losers = Model.Event.Match.GetLosers();
    var loser1 = Model.Event.Match.GetLosers().First();
}
<li>
    <b>@Math.Max(Model.Event.Match.RedScore, Model.Event.Match.BlueScore) - @Math.Min(Model.Event.Match.RedScore, Model.Event.Match.BlueScore)</b>
    @Model.RandomSentence
    <a href="@Url.Action("Player","Stats", new {playerId = @winner1.Id })">@winner1.Name</a>
    @if (winners.Count > 1)
    {
        <text>& </text><a href="@Url.Action("Player","Stats", new {playerId = @Model.Event.Match.GetWinners().Last().Id })">@Model.Event.Match.GetWinners().Last().Name</a>
    }
    @Model.RandomBeating
    <a href="@Url.Action("Player","Stats", new {playerId = @loser1.Id })">@loser1.Name</a>
    @if (losers.Count > 1)
    {
        <text>& </text><a href="@Url.Action("Player","Stats", new {playerId = @Model.Event.Match.GetLosers().Last().Id })">@Model.Event.Match.GetLosers().Last().Name</a>
    }
</li>