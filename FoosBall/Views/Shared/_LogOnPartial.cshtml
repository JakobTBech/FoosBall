@using FoosBall.Models
@if (Session["IsLoggedIn"].ToString().ToLower() == "true")
{
    var user = (Player)Session["User"];
    <text>Hi @user.Name
    [ 
        @if (Session["IsLoggedIn"].ToString().ToLower() == "true")
        {
            if (Session["Admin"].ToString().ToLower() == "true")
            {
                @Html.ActionLink("Admin", "Index", "Admin") <text>&middot;</text>
            }                           
        }
        @Html.ActionLink("Edit", "Edit", "Account", new {id = user.Id}, null) &middot; @Html.ActionLink("Log Off", "LogOff", "Account") 
    ]</text>
}
else 
{
    @Html.ActionLink("Log on", "LogOn", "Account") <text>or</text> @Html.ActionLink("Sign up", "Register", "Account")
}