@model FoosBall.Models.MatchTable

 <table id="legendary-matches">
    <thead>
        <tr>
            <th class="red names">Red team</th>
            <th class="red nicknames">Red team</th>
            <th class="blue names">Blue team</th>
            <th class="blue nicknames">Blue team</th>
            <th class="score">Result</th>
            @*<th class="created">Created</th>*@
            <th class="played">Played</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model.Matches)
        {
            <tr>
                @* Red Teams names and Nicknames *@
                <td class="red names @if (match.RedScore > match.BlueScore) { <text>winner</text> }">
                    @match.RedPlayer1.Name
                    @if (match.CountRedPlayers() == 2)
                    {
                        <text> & </text>@match.RedPlayer2.Name
                    }
                </td>
                <td class="red nicknames @if (match.RedScore > match.BlueScore) { <text>winner</text> }">
                    @match.RedPlayer1.NickName
                    @if (match.CountRedPlayers() == 2)
                    {
                        <text> & </text>@match.RedPlayer2.NickName
                    }
                </td>
                @* Blue Teams names and Nicknames *@
                <td class="blue names @if (match.BlueScore > match.RedScore) { <text>winner</text> }">
                    <span class="name">@match.BluePlayer1.Name
                    @if (match.CountBluePlayers() == 2)
                    {
                        <text> & </text>@match.BluePlayer2.Name
                    }
                </td>
                <td class="blue nicknames @if (match.BlueScore > match.RedScore) { <text>winner</text> }">
                    @match.BluePlayer1.NickName
                    @if (match.CountBluePlayers() == 2)
                    {
                        <text> & </text>@match.BluePlayer2.NickName
                    }
                </td>
                <td class="score">
                    <span class="red @if (match.RedScore > match.BlueScore) { <text>winner</text> }">@match.RedScore</span>
                    -
                    <span class="blue @if (match.BlueScore > match.RedScore) { <text>winner</text> }">@match.BlueScore</span>
                </td>
                @*
                <td class="created" title="@match.CreationTime.ToLocalTime()">
                    <span class="short-time">@match.CreationTime.ToLocalTime().ToString("dd MMM")</span>
                    <span class="long-time">@match.CreationTime.ToLocalTime().ToString()</span>
                </td>*@
                <td class="played" title="@match.GameOverTime.ToLocalTime()">
                    <span class="short-time">@match.GameOverTime.ToLocalTime().ToString("dd MMM")</span>
                    <span class="long-time">@match.GameOverTime.ToLocalTime().ToString()</span>
                </td>

            </tr>
       }
    </tbody>
</table>