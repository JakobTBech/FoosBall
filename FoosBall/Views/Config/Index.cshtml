@model FoosBall.Models.Config
@{
    ViewBag.Title = "Configuration";
}

@section Javascript{ <script async src="/Scripts/Config.js"></script> }
@section Css { <link rel="stylesheet" href="/Content/Config.css"/> }

<fieldset>
    <legend>Configuration</legend>
    @using (Html.BeginForm("Save", "Config", FormMethod.Post))
    {
        @Html.LabelFor(m => Model.Name, "Application Name")
        @Html.TextBoxFor(m => Model.Name)
    
        @Html.LabelFor(m => Model.Version, "Version (experimental)")
        @Html.TextBoxFor(m => Model.Version)
    
        @Html.LabelFor(m => Model.Domain, "Domain")
        @Html.TextBoxFor(m => Model.Domain)
    
        @Html.LabelFor(m => Model.RequireDepartment, "Require Department?")
        <input name="RequireDepartment" type="checkbox" value="true" @(Model.RequireDepartment ? "checked=\"checked\"" : "")/>
        
        @Html.LabelFor(m => Model.RequireDomainValidation, "Validate domain?")
        <input name="RequireDomainValidation" type="checkbox" value="true" @(Model.RequireDomainValidation ? "checked=\"checked\"" : "")/>

        @Html.LabelFor(m => Model.AllowOneOnOneMatches, "Allow one-on-one matches?")
        <input name="AllowOneOnOneMatches" type="checkbox" value="true" @(Model.AllowOneOnOneMatches ? "checked=\"checked\"" : "")/>

        @Html.LabelFor(m => Model.GenderSpecificMatches, "Require gender specific matches?")
        <input name="GenderSpecificMatches" type="checkbox" value="true" @(Model.GenderSpecificMatches ? "checked=\"checked\"" : "")/>

        <input name="save-config" type="submit" value="Save" class="button"/>
    }
</fieldset>